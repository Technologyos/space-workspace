root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 3
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 2

[*.yaml]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.gradle]
indent_size = 2

[COMMIT_EDITMSG]
max_line_length = off

[Makefile]
indent_size = 8
indent_style = tab
